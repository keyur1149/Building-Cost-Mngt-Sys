@model Building_Cost_Mngt_Sys.Models.Users.AdduserViewModel;
<form asp-action="Adduser" asp-controller="User">
    <div class="form-group">
        <label for="exampleInputEmail1">User Name</label>
        <input type="text" asp-for="User_Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter User Name" required>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" asp-for="EmailID" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" required>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password" required>
    </div>
    <button type="submit" class="btn btn-primary">Add User</button>
</form>
