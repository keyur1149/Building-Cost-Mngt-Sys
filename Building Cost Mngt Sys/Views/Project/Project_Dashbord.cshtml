@model Building_Cost_Mngt_Sys.Models.Account.AccViewModel;
<div class="container" style="    margin: 50px 10px;">
    <div class="row">
        <div class="col-md-8">
            <div>ID :- <span style="font-weight:900;">@ViewBag.Id</span></div>
            <div>@ViewBag.as_a Name :- <span style="font-weight:900;">@ViewBag.projectname</span> </div>
            <div>Addess :- <span style="font-weight:900;">@ViewBag.address</span> </div>
            <div>No of Floors :- <span style="font-weight:900;">@ViewBag.no_of_floor</span> </div>
            <div>No of House per floor :- <span style="font-weight:900;">@ViewBag.no_of_house_per_floor</span></div>
</div>
        <div class="col-md-2"></div>
        <div class="col-md-2" style="    align-self: center;"><a class="btn btn-danger btn-lg" asp-action="DashBord_Index" asp-controller="User"><i class="fa fa-arrow-left"></i> Back</a></div>

    </div>
</div>
<hr/>

<div class="container">
    <div class="row" style="background-color:antiquewhite;">
        @foreach(var v in Model.Accounts)
        {
            <div class="col-md-10" style="font-size:20px;padding:0px 4  5px;">@v.Description</div>
    
            <div class="col-md-2" style="font-size:20px;text-align:center;">
                @if(v.Type=="Credit"){
                    <span style="color:green;">+@v.Amount</span>
                }else if (v.Type == "Debit")
                {
                    <span style ="color:red;">-@v.Amount</span>
                }

            </div>
            <hr/>
           
        }
    </div>
</div>

<div style=" position: fixed;
    bottom: 50px;
    right: 50px;
    z-index: 999;">
    <a asp-action="Addexp" asp-route-name="@ViewBag.as_a" asp-controller="Account" class="btn btn-primary btn-lg"><i class="fa fa-plus" aria-hidden="true"></i> Add Expenses</a>
</div>